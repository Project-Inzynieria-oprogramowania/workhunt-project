<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:page_title)) %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag 'logo.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "common", "header", "form", "signup", "startpage", "profile" , "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "flash" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/flash' %>
          <% if controller_name == 'sessions' || controller_name == 'users' && action_name != 'edit' %>
              <%= render 'shared/header' %>
          <% elsif controller_name != 'home' %>
              <%= render 'shared/headerAlt' %>
          <% else %>
            <% if user_signed_in? %>
              <%= render 'shared/headerAlt' %>
            <% end %>
          <% end %>
    <%= yield %>
  </body>
</html>
