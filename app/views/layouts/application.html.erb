<!DOCTYPE html>
<html>
  <head>
    <title>WorkhuntProject</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag 'logo.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="TopBanner">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', id: 'MainLogo'%>
        <%= content_tag :span, "WorkHunt", id: "WorkhuntHeader" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
