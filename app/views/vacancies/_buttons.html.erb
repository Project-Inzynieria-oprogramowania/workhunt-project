<div class='brief-card-buttons'>
    <% if current_user&.organization? %>
        <% if current_user.organization == vacancy.organization %>
            <% if controller_name != 'responses' %>
                <%= button_to vacancy_responses_path(vacancy), method: :get do %>
                    <%= inline_svg_tag 'svg-icons/responses-icon.svg' %>
                <% end %>
            <% end %>
            <%= button_to edit_vacancy_path(vacancy), method: :get do %>
                <%= inline_svg_tag 'svg-icons/edit-icon.svg' %>
            <% end %>
            <%= button_to vacancy_path(vacancy), method: :delete, data: { confirm: 'Are you sure you want to delete vacancy?' }, class: 'dangerous' do %>
                <%= inline_svg_tag 'svg-icons/delete-cross-icon.svg' %>
            <% end %>
        <% end %>
