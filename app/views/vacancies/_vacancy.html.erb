<%= link_to vacancy_path(vacancy) do %>
    <h2><%= vacancy.title %></h2>
    <p><%= truncate vacancy.description, length: 100 %></p>
    <p><b><%= vacancy.salary_min %> to <%= vacancy.salary_max %> <%= vacancy.currency %></b></p>
<% end %>
<%= render 'vacancies/buttons', locals: {vacancy: vacancy} %><br><br>