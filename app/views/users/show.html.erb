<div class='page-title'>
    <% if current_user.present? && @user.id == current_user.id %>
        <h1>My profile</h1><%= image_tag 'menuIcons/human.png' %>
        <% provide :page_title, 'My profile' %>
    <% else %>
        <% if @user.person? %>
            <h1>Person profile</h1><%= image_tag 'menuIcons/human.png' %>
            <% provide :page_title, @user.person.name + ' ' + @user.person.surname %>
        <% elsif @user.organization? %>
            <h1>Organization profile</h1><%= image_tag 'menuIcons/human.png' %>
            <% provide :page_title, @user.organization.name %>
        <% end %>
    <% end %>
</div>
<div class='form profile'>
    <div class='pair-container'>
        <% if current_user.present? && @user.id == current_user.id %>
            <%= link_to user_settings_path, class: 'corner-link' do %>
                <%= image_tag 'menuIcons/edit.png' %>
            <% end %>
        <% else %>
            <% if user_signed_in? %>
                <div class='corner-link'><%= image_tag 'menuIcons/writeToPlaceholder.png' %></div>
            <% else %>
                <%= link_to login_path do %>
                    <div class='corner-link'><%= image_tag 'menuIcons/writeToPlaceholder.png' %></div>
                <% end %>
            <% end %>
        <% end %>
        <div class='pair-single-container'>
            <div class='icon-placeholder'></div>
        </div>
        <% if @user.person? %>
            <div class='pair-single-container profile'>
                <h1><%= @user.person.name %> <%= @user.person.surname %></h1>
                <p class='detailed-tag-info'><span>Gender:</span> <%= @user.person.sex %></p>
                <% if @user.person.DOB.present? %>
                    <div class='detailed-tag-info'><span>DOB:</span> <%= @user.person.DOB %></div>
                <% else %>
                    <div class='detailed-tag-info'><span>DOB:</span> no data</div>
                <% end %>
                <div class='detailed-tag-info'><span>Person</span></div>
            </div>
        <% elsif @user.organization? %>
            <div class='pair-single-container profile'>
                <h1><%= @user.organization.name %></h1>
                <div class='detailed-tag-info'><span>Organization</span></div>
            </div>
        <% end %>
    </div>
</div>
    <% if @user.person? && @user.person.about.present? %>
        <div class='form profile'>
            <h1 class='paragraph-profile-title'>About me</h1>
            <p class='about-user detailed-tag-info'><%= @user.person.about %></p>
        </div>
    <% elsif @user.organization? &&  @user.organization.about.present? %>
        <div class='form profile'>
            <h1 class='paragraph-profile-title'>About us</h1>
            <p class='about-user detailed-tag-info'><%= @user.organization.about %></p>
        </div>
     <% end %>
<%# 
    Будет какой-то блок, в котором будет хранится или только блок отзывов, или блок отзывов и блок вакансий. 
    Нужно через js сделать переключение между ними 
%>
<% if @user.organization? %>
        <div class='form profile remove-style'>
        <% if current_user.present? && @user.id == current_user.id %>
            <%= link_to "Create new offer", vacancy_new_path, class: 'button profile' %>
        <% end %>
            <%= render Vacancy.where(organization_id: @user.organization.id) %>
        </div>
<% end %>