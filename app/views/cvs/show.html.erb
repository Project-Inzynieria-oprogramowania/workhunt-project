<%= @cv.inspect %><br><br>

<% @cv.educations.each do | education | %>
    <%= render 'educations/education', education: education %><br>
<% end %><br><br>
<% @cv.experiences.each do | experience | %>
    <%= render 'experiences/experience', experience: experience %><br>
<% end %><br><br>
<% @cv.languages.each do | language | %>
    <%= render 'languages/language', language: language %><br>
<% end %>
<%# Убери потом <br><br> %>
<% if user_signed_in? && current_user.person.id == @cv.person_id %>
    <%= link_to 'Edit', edit_cv_path, class: 'button' %>
    <%= button_to "Delete", cv_path, method: :delete, type: 'button', class: 'button', confirm: 'Are you sure you want to delete CV?' %>
<% end %>