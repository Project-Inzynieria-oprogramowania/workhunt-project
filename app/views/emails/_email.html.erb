<div class='form-field'>
    <div class='top-line-container contacts'>
        <div class='top-line-element contacts'>
            <p> <%= email.address %></p>
        </div>
        <% if current_user.present? && @user.present? && @user.id == current_user.id %>
            <div class='top-line-element contacts'>
                <%= button_to user_email_path(email), method: :delete, type: 'button', confirm: 'Are you sure you want to delete email?' do %>
                    <%= image_tag 'menuIcons/delete-info-cross.png' %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>